datasource postgres {
  provider = "postgresql"
  url      = env("POSTGRESQL_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  createdAt DateTime? @default(now())
  firstName String?
  id        String    @id @default(cuid())
  lastName  String?
  password  String
  roles     String[]
  updatedAt DateTime? @updatedAt
  username  String    @unique
}

model Project {
  createdAt    DateTime  @default(now())
  description  String?
  dueDate      DateTime?
  id           String    @id @default(cuid())
  mySecondTask Task[]
  name         String?
  startDate    DateTime?
  updatedAt    DateTime  @updatedAt
}

model Task {
  createdAt  DateTime       @default(now())
  estimation Int?
  id         String         @id @default(cuid())
  project    Project        @relation(fields: [projectId], references: [id])
  projectId  String
  startDate  DateTime
  status     EnumTaskStatus
  title      String
  updatedAt  DateTime       @updatedAt
}

enum EnumTaskStatus {
  new
  pending
  onHold
  ongoing
  done
}